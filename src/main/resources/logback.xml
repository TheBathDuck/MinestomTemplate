<configuration>

    <conversionRule conversionWord="highlightex" converterClass="nl.thebathduck.minestom.utils.LoggingConfiguration"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss} %highlightex(%level)]: %highlightex(%msg%n)</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>